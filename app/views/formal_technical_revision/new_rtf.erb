<% content_for :title, "Nueva Revisión Técnica Formal" %> 

<div class="page-header">
  <h2>Nueva Revisión Técnica Formal</h2>
</div>

<div class="row">
  <strong>Seleccione el subsistema a revisar:</strong><br /><br />
  <div class="span7">
    
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <th>#</th>
        <th>Subsistema</th>
        <th>Pertenece al sistema</th>
        <th></th>
      </thead>
      <tbody>
        <% @subsystems.each do |subsystem | %>
          <tr>
            <td><%= subsystem.id  %> </td>
            <td><%= subsystem.name %> </td>
            <td><%= System.find(subsystem.system_id).name %> </td>
            <td style="text-align: center"><%= link_to 'Seleccionar', formal_technical_revision_choose_programmer_and_model_path(subsystem.id)  %> </td>
          </tr>
        <% end %>
      </tbody>

    </table>
    <%= paginate @subsystems %>
  </div>
  <div class="span4 well">
    <div class="control-group">
      <strong>Busque el subsistema: </strong>
      <%= form_tag( formal_technical_revision_new_rtf_path, :method => "get") do %>
        <%= text_field_tag :subsystem_name,'' %>
        <%= submit_tag "Buscar", { :class => "btn-primary" } %></i>
      <% end %>
    </div>
    <div class="control-group">
      <strong>O registre: </strong>
      <%= link_to 'Nuevo subsistema', new_subsystem_path, {:class => "btn btn-primary"} %>
    </div>
  </div>
  
</div>