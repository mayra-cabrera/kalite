<% content_for :title, "Catálogos" %> 

<div class="page-header">
    <h1>FOLIO: <%= @concept.folio %></h1>
</div>

<div class="row-fluid">
  <div class="span6">
    <p>
      <b>Descripción:</b>
      <%= @concept.description %>
    </p>
    
     <p>
      <b>Atributo:</b>
      <%= @concept.attribute.name %>
    </p>
    
    <p>
      <b>Sección:</b>
      <%= @concept.section.name %>
    </p>

     <p>
      <b>Modelo:</b>
      <%= @concept.diagram.name%>
    </p>

     <p>
      <b>Creación:</b>
      <%= l @concept.created_at, :format => :date_time %>
    </p>

    <p>
      <b>Última actualización:</b>
      <%= l @concept.updated_at, :format => :date_time %>
    </p> 
  </div>
  <div class="span6">
    <div class="well">
      <table class="table table-striped table-bordered table-condensed">
          <thead>
            <th>FOLIO</th>
            <th>DIAGRAMA</th>
          </thead>
          <tbody>
            <% @diagrams.each do |diagram| %>     
            <tr>
              <td><%= diagram.folio %> </td>
              <td><%= diagram.name  %> </td>
            </tr>
            <% end %>
          </tbody>
        </table>
     </div>
  </div>
</div>



<div class="form-actions">
  <%= link_to 'Editar', edit_concept_path(@concept), { :class => "btn btn-primary" } %> 
</div>