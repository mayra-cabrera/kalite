<% content_for :title, "Catálogos" %> 
<div class="page-header">
  <h1>Catálogo de atributos</h1>
</div>

<div class="row">
  <div class="span4">
    <div class="control-group">
      <%= form_tag( attributes_path, :method => "get") do %>
        Atributos:   <%= text_field_tag :attribute_name,'' %>
        <%= submit_tag "Buscar", { :class => "btn-primary" } %>
      <% end %>
    </div>
  </div>
  <div class="span4">
    <div class="pull-right">
      <%= link_to 'Nuevo atributo', new_attribute_path, {:class => "btn btn-primary"} %>
    </div>
  </div>
</div>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>#</th>
    <th>Nombre</th>
    <th colspan="3" style="text-align: center"></th>
  </tr>

<% @attributes.each do |attribute| %>
  <tr>
    <td><%= attribute.id %> </td>
    <td><%= attribute.name %> </td>
    <td style="text-align: center"><%= link_to 'Ver', attribute %></td>
    <td style="text-align: center"><%= link_to 'Editar', edit_attribute_path(attribute) %></td>
    <td style="text-align: center"><%= link_to 'Eliminar', attribute, confirm: '¿Está seguro de eliminar este atributo?', method: :delete %></td>
  </tr>
<% end %>
</table>
<%= paginate @attributes %>
<br />


