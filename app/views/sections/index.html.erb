<% content_for :title, "Catálogos" %>  
<div class="page-header">
  <h1>Catálogo de secciones</h1>
</div>

<div class="row">
  <div class="span4">
    <div class="control-group">
      <%= form_tag( sections_path, :method => "get") do %>
        Sección:   <%= text_field_tag :section_name,'' %>
        <%= submit_tag "Buscar", { :class => "btn-primary" } %>
      <% end %>
    </div>
  </div>
  <div class="span4">
    <div class="pull-right">
      <%= link_to 'Nueva sección', new_section_path, {:class => "btn btn-primary"} %>
    </div>
  </div>
</div>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>#</th>
    <th>Nombre</th>
    <th>Diagrama</th>
    <th colspan="3" style="text-align: center"></th>
  </tr>

<% @sections.each do |section| %>
  <tr>
    <td><%= section.id %> </td>
    <td><%= section.name %> </td>
    <td><%= section.diagram.name  %> </td>
    <td style="text-align: center"><%= link_to 'Ver', section %></td>
    <td style="text-align: center"><%= link_to 'Editar', edit_section_path(section) %></td>
    <td style="text-align: center"><%= link_to 'Eliminar', section, confirm: '¿Está seguro de eliminar esta sección?', method: :delete %></td>
  </tr>
<% end %>
</table>
<%= paginate @sections %>
<br />

