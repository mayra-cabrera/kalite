<% content_for :title, "Catálogos" %>  


<div class="row-fluid">
  <div class="page-header">
          <h1><%= @section.name %></h1>
  </div>

  <p>
    <b>Nombre:</b>
    <%= @section.name %>
  </p>

  <p>
    <b>Creación:</b>
    <%= l  @section.created_at, :format => :date_time %>
  </p>

  <p>
    <b>Última actualización:</b>
    <%= l @section.updated_at, :format => :date_time %>
  </p>	

  <div class="form-actions">
    <%= link_to 'Editar', edit_section_path(@section), { :class => "btn btn-primary" } %> 
  </div>
</div>
