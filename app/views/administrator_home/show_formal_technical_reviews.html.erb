<% content_for :title, "Revisiones Técnicas Formales" %> 
<div class="page-header">
  <h2>Revisiones Técnicas Formales (RTF)</h2>
</div>

<div class="row">
  <div class="span4">
    <div class="control-group">
      <%= form_tag( administrator_home_show_formal_technical_reviews_path, :method => "get") do %>
        Subsistema:   <%= text_field_tag :subsystem_name,'' %>
        <%= submit_tag "Buscar", { :class => "btn-primary" } %>
      <% end %>
    </div>
  </div>
  <div class="span8">
    <div class="pull-right">
      <%= link_to "Registrar nueva RTF", formal_technical_revision_new_rtf_path, {:class => "btn btn-primary" } %>
    </div>
  </div>
</div>

<table class="table table-striped table-bordered table-condensed">
  <thead>
  <th>#</th>
  <th>Subsistema</th>
  <th>Sistema</th>
  <th>Modelo</th>
  <th colspan="2" style="text-align: center">Operaciones</th>
  </thead>
  <tbody>
    <% @rtf.each do |rtf| %>
    <tr>
      <td><%= rtf.id %> </td>
      <td><%= rtf.subsystem.name %></td>
      <td><%= rtf.subsystem.system.name %> </td>
      <td><%= rtf.diagram.name %> </td>
      <% if !rtf.score_id.blank? %>
        <td style="text-align: center"><%=  link_to "Consultar detalle", administrator_home_rtf_detail_path(:rtf_id => rtf.id) %></td>
        <td style="text-align: center"><%=  link_to "Consultar resultado", administrator_home_show_results_path(:rtf_id => rtf.id) %></td>
      <% else %>
        <td style="text-align: center"><%=  link_to "Consultar detalle", administrator_home_rtf_detail_path(:rtf_id => rtf.id) %></td>
        <td style="text-align: center">Consultar resultado</td>
      <% end %>
      
      
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @rtf %>