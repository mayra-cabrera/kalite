<% content_for :title, "Detalle de Revisión Técnica Formal" %> 

<div class="page-header">
  <h2> <%= @rtf.subsystem.name%> </h2>
  <h4>pertenece a <%= @rtf.subsystem.system.name %> </h4><br/>
  <%= link_to 'Atrás', administrator_home_show_formal_technical_reviews_path, { :class => "btn btn-small btn-primary" } %>
</div>


<div class="row">
  <div class="span10">
    <h3><div class="pull-left"> #Conceptos = <%= @total_concepts %></div></h3>
  </div>

  <div class="span3 well">
    <p>
      <h3><%=  @rtf.diagram.name %></h3>
    </p>

    <p>
      <b>Administrador:</b>
      <%= @rtf.administrator.complete_name %>
    </p>

    <p>
      <b>Programador:</b>
      <%= @rtf.programmer.complete_name %>
    </p>
  </div>
  <div class="span7">
    
    <table class="table table-striped table-bordered table-condensed">
      <thead>
      <th>#</th>
      <th>Atributo</th>
      <th>Concepto</th>
      <th>Peso</th>
      </thead>
      <tbody>
        <%   @concepts.each do |concept|  %>
        <tr>
          <td><%= concept.concept.id%> </td>
          <td><%= concept.concept.attribute.name %></td>
          <td><%= concept.concept.description %> </td>
          <td><%= sprintf("%.3f", concept.weight.to_f) %> </td>
        </tr>

        <% end %>
      </tbody>
    </table>
    <%= paginate @concepts %>
  </div>
</div>

