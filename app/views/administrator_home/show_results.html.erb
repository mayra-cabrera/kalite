<% content_for :title, "Conceptos" %>
<head>
  
  <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap-responsive.css" />
</head>

<div class="page-header">
  <h2><%= @rtf.subsystem.system.name %> / <%= @rtf.subsystem.name %> </h2>
  <h3><%= @rtf.diagram.name %> </h3><br/>
  <h3>Resultados</h3>
</div>


<div class="span3 well">
  <b>FORMULAS</b>
  <ul>
    <li><em>Total = Peso x Calificación</em></li>
    <li><em>Peso total = ∑ (pesos)</em></li>
  </ul><br/>
  <b>ESCALA CUALITATIVA</b>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <th>Escala</th>
      <th>Calificación</th>
    </thead>
    <tbody>
      <tr><td>-60%</td><td>No aceptable</td></tr>
      <tr><td>61% - 70%</td><td>Deficiente</td></tr>
      <tr><td>71% - 80%</td><td>Regular</td></tr>
      <tr><td>81% - 90%</td><td>Bueno</td></tr>
      <tr><td>91%-100%</td><td>Muy bueno</td></tr>
    </tbody>
  </table>

</div>
<div class="span8">
  <div class="accordion" id="section">
    <% @sections_concept.each do |section, concept| %>
      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="section" href="#_<%= section.split.first %>">
            Sección: <%= section%>
          </a>
        </div>
        <div id="_<%= section.split.first %>" class="accordion-body collapse in">
          <div class="accordion-inner">
            <table class="table table-striped table-bordered table-condensed">
              <thead>
              <th>Concepto</th>
              <th>Peso</th>
              <th>Calificación</th>
              <th>Total</th>
              </thead>
              <tbody>
                <tr>
                <% count = 0 %>
                <% concept.each do |c| %>
                    <td><%= c %> </td> 
                    <% count = count + 1 %>
                    <% if count % 4  == 0%>
                      <tr/>
                    <% end %>
                <% end %>

              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>

  </div>
  <div class="span5">
    
  </div>
  
  <div class="span6">
    <table class="table table-striped table-bordered table-condensed">
      <tbody>
        <tr>
          <td><b>∑(TOTAL) DESEADO</b></td>
            <td><%= sprintf("%.3f", @total_wanted) %></td>
            <td><b>∑(TOTAL) OBTENIDO</b></td>
            <td><%= sprintf("%.3f", @total) %></td>
            
        </tr>
        <tr>
          <td><b>PORCENTAJE DESEADO</b></td><td>100%</td>
          <td><b>PORCENTAJE OBTENIDO</b></td><td><%= sprintf("%.2f", @rtf.result) + "%" %> </td>
        </tr>
        <tr><td></td><td></td><td><b>ESCALA</b></td><td><%= @rtf.score.description  %> </td></tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row-fluid">
<div class="row">
  <div class="span3">
    
  </div>
</div>
</div>
<script type="text/javascript" src="/javascripts/application.js"></script>
<script type="text/javascript" src="/javascripts/bootstrap-collapse.js"></script>