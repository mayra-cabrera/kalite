<% content_for :title, "Catálogos" %>  
<div class="page-header">
  <h1>Catálogo de tipos de sistema</h1>
</div>
<div class="row">
  <div class="span5">
    <div class="control-group">
      <%= form_tag( system_types_path, :method => "get") do %>
        Tipo de sistema:   <%= text_field_tag :system_type_name,'' %>
        <%= submit_tag "Buscar", { :class => "btn-primary" } %>
      <% end %>
    </div>
  </div>
  <div class="span3">
    <div class="pull-right">
      <%= link_to 'Nuevo tipo de sistema', new_system_type_path, {:class => "btn btn-primary"} %>
    </div>
  </div>
</div>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>#</th>
    <th>Nombre</th>
    <th colspan="3" style="text-align: center"></th>
  </tr>

<% @system_types.each do |system_type| %>
  <tr>
    <td><%= system_type.id %>  </td>
    <td><%= system_type.name %> </td>
    <td style="text-align: center"><%= link_to 'Ver', system_type %></td>
    <td style="text-align: center"><%= link_to 'Editar', edit_system_type_path(system_type) %></td>
    <td style="text-align: center"><%= link_to 'Eliminar', system_type, :confirm => '¿Está seguro de eliminar este tipo de sistema?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= paginate @system_types %>
<br />
