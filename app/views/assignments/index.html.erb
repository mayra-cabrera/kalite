<% content_for :title, "Catálogos" %> 
<div class="page-header">
  <h1>Asignación de pesos</h1>
</div>

<div class="span9">
  <%= render "assignments/system_type_menu" %>
</div>

<% if !@assignments.nil? %>
  <div class="span9">
   <table class="table table-striped table-bordered table-condensed">
      <thead>
        <th>Diagrama</th>
        <th colspan="2" style="text-align: center"></th> 
      </thead>
      <tbody>
        <% @assignments.each do |system| %>
        <tr>
          <td><%= system.diagram.name  %> </td>
          <td style="text-align: center"><%= link_to 'Ver', system %></td>
          <td style="text-align: center"><%= link_to 'Editar', edit_assignment_path(system) %></td>
        </tr>
        <% end %>
      </tbody>

    </table>

  </div>
<% end %>