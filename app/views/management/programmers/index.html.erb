<% content_for :title, "Catálogos" %> 
<div class="page-header">
  <h1>Catálogo de programadores</h1>
</div>

<div class="row">
  <div class="span4">
    <div class="control-group">
      <%= form_tag( management_programmers_path, :method => "get") do %>
        Programador:   <%= text_field_tag :programmer_name,'' %>
        <%= submit_tag "Buscar", { :class => "btn-primary" } %>
      <% end %>
    </div>
  </div>
  <div class="span4">
    <div class="pull-right">
      <%= link_to 'Nuevo programador', new_management_programmer_path, {:class => "btn btn-primary"} %>
    </div>
  </div>
</div>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>#</th>
    <th>Nombre</th>
    <th>Apellido</th>
    <th colspan="3" style="text-align: center"></th>
  </tr>

<% @programmers.each do |programmer| %>
  <tr>
    <td><%= programmer.id %></td>
    <td><%= programmer.first_name %></td>
    <td><%= programmer.last_name %></td>
    <td style="text-align: center"><%= link_to 'Ver', [:management, programmer] %></td>
    <td style="text-align: center"><%= link_to 'Editar', edit_management_programmer_path(programmer) %></td>
    <td style="text-align: center"><%= link_to 'Eliminar',[:management, programmer], confirm: '¿Está seguro de eliminar este programador?', method: :delete %></td>
  </tr>
<% end %>
</table>
<%= paginate @programmers %>
<br />

