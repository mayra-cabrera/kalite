<%= form_for([:management, @administrator], :html => {:class => "form-horizontal"}) do |f| %>
  <% if @administrator.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@administrator.errors.count, "error") %> prohibited this administrator from being saved:</h2>

      <ul>
      <% @administrator.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= f.label :first_name, { :class => "control-label" } %>
      <div class="controls">
        <%= f.text_field :first_name %>
      </div>
    </div>		

    <div class="control-group">
      <%= f.label :last_name, { :class => "control-label" } %>
      <div class="controls">
        <%= f.text_field :last_name %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :email, { :class => "control-label" } %>
      <div class="controls">	
         <%= f.email_field :email %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password, { :class => "control-label" } %>
      <div class="controls">
        <%= f.password_field :password %>
      </div>
    </div>
    
      <div class="control-group">
        <%= f.label :password_confirmation, { :class => "control-label" } %>
        <div class="controls">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>	
    
      <div class="form-actions">
        <%= f.submit "Guardar", :class => 'btn btn-primary' %> <%= link_to('Cancelar', management_administrators_path, { :class => "btn" }) %>
      </div>
    </fieldset>
<% end %>
