<% content_for :title, "Catálogos" %>  
<div class="page-header">
  <h1>Catálogo de sistemas</h1>
</div>
<div class="row">
  <div class="span4">
    <div class="control-group">
      <%= form_tag( systems_path, :method => "get") do %>
        Sistema:   <%= text_field_tag :system_name,'' %>
        <%= submit_tag "Buscar", { :class => "btn-primary" } %>
      <% end %>
    </div>
  </div>
  <div class="span4">
    <div class="pull-right">
      <%= link_to 'Nuevo sistema', new_system_path, {:class => "btn btn-primary"} %>
    </div>
  </div>
</div>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>#</th>
    <th>Nombre</th>
    <th colspan="3" style="text-align: center"></th>
  </tr>

<% @systems.each do |system| %>
  <tr>
    <td><%= system.id %> </td>
    <td><%= system.name %> </td>
    <td style="text-align: center"><%= link_to 'Ver', system %></td>
    <td style="text-align: center"><%= link_to 'Editar', edit_system_path(system) %></td>
    <td style="text-align: center"><%= link_to 'Eliminar', system, confirm: '¿Está seguro de eliminar este sistema?', method: :delete %></td>
  </tr>
<% end %>
</table>
<%= paginate @systems %>
<br />

