<% content_for :title, "Catálogos" %>  
<div class="page-header">
  <h1>Catálogo de diagramas</h1>
</div>
<div class="row">
  <div class="span4">
    <div class="control-group">
      <%= form_tag( diagrams_path, :method => "get") do %>
        Diagrama:   <%= text_field_tag :diagram_name,'' %>
        <%= submit_tag "Buscar", { :class => "btn-primary" } %>
      <% end %>
    </div>
  </div>
  <div class="span4">
    <div class="pull-right">
      <%= link_to 'Nuevo diagrama', new_diagram_path, {:class => "btn btn-primary"} %>
    </div>
  </div>
</div>


<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>#</th>
    <th>Nombre</th>
    <th colspan="3" style="text-align: center"></th>
  </tr>

<% @diagrams.each do |diagram| %>
  <tr>
    <td><%= diagram.id %></td>
    <td><%= diagram.name %> </td>
    <td style="text-align: center"><%= link_to 'Consultar', diagram %></td>
    <td style="text-align: center"><%= link_to 'Editar', edit_diagram_path(diagram) %></td>
    <td style="text-align: center"><%= link_to 'Eliminar', diagram, :confirm => '¿Está seguro de eliminar este diagrama?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= paginate @diagrams %>

<br />


