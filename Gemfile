source 'http://rubygems.org'

gem 'rails', '3.2.6'
gem 'pg'
gem 'jquery-rails'
gem 'bootstrap-sass'
gem "paperclip", "~> 3.1"


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :development do
	gem 'rails_layout'
	gem 'devise'
	gem 'declarative_authorization'
	gem 'activeadmin'
	gem 'kaminari'
	gem 'nokogiri'
end

group :test do
  gem 'turn', '0.8.2', :require => false
end
